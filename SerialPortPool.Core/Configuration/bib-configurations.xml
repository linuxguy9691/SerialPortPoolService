<?xml version="1.0" encoding="UTF-8"?>
<!-- SerialPortPool.Core/Configuration/bib-configurations.xml - NEW Week 2 -->
<!-- Sample BIB configurations for Sprint 5 RS232 POC -->
<root>
  <!-- Production Test Board (FT4232HL) -->
  <bib id="bib_001" description="Production Test Board - FT4232HL">
    <metadata>
      <board_type>production</board_type>
      <revision>v2.1</revision>
      <manufacturer>ACME Test Systems</manufacturer>
      <created_date>2025-07-28</created_date>
    </metadata>
    
    <uut id="uut_001" description="Main Production UUT">
      <metadata>
        <uut_type>main_controller</uut_type>
        <firmware_version>v1.2.3</firmware_version>
      </metadata>
      
      <!-- FT4232HL Port A (COM11) -->
      <port number="1">
        <protocol>rs232</protocol>
        <speed>115200</speed>
        <data_pattern>n81</data_pattern>
        <read_timeout>3000</read_timeout>
        <write_timeout>3000</write_timeout>
        <handshake>None</handshake>
        
        <start>
          <command>ATZ\r\n</command>
          <expected_response>OK</expected_response>
          <timeout_ms>5000</timeout_ms>
          <retry_count>3</retry_count>
        </start>
        
        <test>
          <command>AT+STATUS\r\n</command>
          <expected_response>STATUS_OK</expected_response>
          <timeout_ms>3000</timeout_ms>
          <retry_count>2</retry_count>
        </test>
        
        <stop>
          <command>AT+SHUTDOWN\r\n</command>
          <expected_response>SHUTDOWN_OK</expected_response>
          <timeout_ms>2000</timeout_ms>
          <retry_count>1</retry_count>
        </stop>
      </port>
      
      <!-- FT4232HL Port B (COM12) -->
      <port number="2">
        <protocol>rs232</protocol>
        <speed>57600</speed>
        <data_pattern>e71</data_pattern>
        <read_timeout>2000</read_timeout>
        <write_timeout>2000</write_timeout>
        
        <start>
          <command>INIT_PORT2\r\n</command>
          <expected_response>READY</expected_response>
          <timeout_ms>4000</timeout_ms>
          <retry_count>2</retry_count>
        </start>
        
        <test>
          <command>TEST_PORT2\r\n</command>
          <expected_response>PASS</expected_response>
          <timeout_ms>5000</timeout_ms>
          <retry_count>2</retry_count>
        </test>
        
        <stop>
          <command>CLOSE_PORT2\r\n</command>
          <expected_response>CLOSED</expected_response>
          <timeout_ms>2000</timeout_ms>
          <retry_count>1</retry_count>
        </stop>
      </port>
      
      <!-- FT4232HL Port C (COM13) -->
      <port number="3">
        <protocol>rs232</protocol>
        <speed>9600</speed>
        <data_pattern>n82</data_pattern>
        <read_timeout>5000</read_timeout>
        <write_timeout>3000</write_timeout>
        
        <start>
          <command>START_SLOW\r\n</command>
          <expected_response>SLOW_OK</expected_response>
          <timeout_ms>6000</timeout_ms>
          <retry_count>3</retry_count>
        </start>
        
        <test>
          <command>RUN_SLOW_TEST\r\n</command>
          <expected_response>SLOW_PASS</expected_response>
          <timeout_ms>10000</timeout_ms>
          <retry_count>1</retry_count>
        </test>
        
        <stop>
          <command>STOP_SLOW\r\n</command>
          <expected_response>SLOW_BYE</expected_response>
          <timeout_ms>3000</timeout_ms>
          <retry_count>1</retry_count>
        </stop>
      </port>
      
      <!-- FT4232HL Port D (COM14) -->
      <port number="4">
        <protocol>rs232</protocol>
        <speed>38400</speed>
        <data_pattern>o81</data_pattern>
        <read_timeout>2500</read_timeout>
        <write_timeout>2500</write_timeout>
        
        <start>
          <command>BOOT_DEBUG\r\n</command>
          <expected_response>DEBUG_READY</expected_response>
          <timeout_ms>4000</timeout_ms>
          <retry_count>2</retry_count>
        </start>
        
        <test>
          <command>DEBUG_TEST\r\n</command>
          <expected_response>DEBUG_PASS</expected_response>
          <timeout_ms>7000</timeout_ms>
          <retry_count>2</retry_count>
        </test>
        
        <stop>
          <command>EXIT_DEBUG\r\n</command>
          <expected_response>DEBUG_EXIT</expected_response>
          <timeout_ms>2000</timeout_ms>
          <retry_count>1</retry_count>
        </stop>
      </port>
    </uut>
  </bib>
  
  <!-- Development Test Board (FT232R) -->
  <bib id="bib_002" description="Development Test Board - FT232R">
    <metadata>
      <board_type>development</board_type>
      <revision>v1.0</revision>
      <manufacturer>Dev Lab</manufacturer>
      <created_date>2025-07-28</created_date>
    </metadata>
    
    <uut id="uut_002" description="Development UUT">
      <metadata>
        <uut_type>development_board</uut_type>
        <firmware_version>v0.9.1</firmware_version>
      </metadata>
      
      <!-- FT232R Single Port (COM6) -->
      <port number="1">
        <protocol>rs232</protocol>
        <speed>115200</speed>
        <data_pattern>n81</data_pattern>
        <read_timeout>1500</read_timeout>
        <write_timeout>1500</write_timeout>
        <handshake>None</handshake>
        <rts_enable>false</rts_enable>
        <dtr_enable>true</dtr_enable>
        
        <start>
          <command>DEV_INIT\r\n</command>
          <expected_response>DEV_OK</expected_response>
          <timeout_ms>3000</timeout_ms>
          <retry_count>2</retry_count>
        </start>
        
        <test>
          <command>DEV_TEST\r\n</command>
          <expected_response>DEV_RESULT:PASS</expected_response>
          <timeout_ms>4000</timeout_ms>
          <retry_count>2</retry_count>
        </test>
        
        <stop>
          <command>DEV_QUIT\r\n</command>
          <expected_response>DEV_BYE</expected_response>
          <timeout_ms>1500</timeout_ms>
          <retry_count>1</retry_count>
        </stop>
      </port>
    </uut>
  </bib>
  
  <!-- Hardware Validation Test Board -->
  <bib id="bib_hardware_test" description="Hardware Validation Test Board">
    <metadata>
      <board_type>validation</board_type>
      <revision>v1.5</revision>
      <purpose>Hardware validation and POC testing</purpose>
      <created_date>2025-07-28</created_date>
    </metadata>
    
    <uut id="uut_validation" description="Hardware Validation UUT">
      <metadata>
        <uut_type>validation_board</uut_type>
        <test_mode>hardware_poc</test_mode>
      </metadata>
      
      <!-- High-speed validation port -->
      <port number="1">
        <protocol>rs232</protocol>
        <speed>230400</speed>
        <data_pattern>n81</data_pattern>
        <read_timeout>1000</read_timeout>
        <write_timeout>1000</write_timeout>
        <handshake>RtsXOnXOff</handshake>
        
        <start>
          <command>HW_TEST_START\r\n</command>
          <expected_response>HW_READY</expected_response>
          <timeout_ms>2000</timeout_ms>
          <retry_count>3</retry_count>
        </start>
        
        <test>
          <command>HW_VALIDATE\r\n</command>
          <expected_response>HW_VALIDATION:PASS</expected_response>
          <timeout_ms>8000</timeout_ms>
          <retry_count>1</retry_count>
        </test>
        
        <stop>
          <command>HW_TEST_STOP\r\n</command>
          <expected_response>HW_COMPLETE</expected_response>
          <timeout_ms>1500</timeout_ms>
          <retry_count>1</retry_count>
        </stop>
      </port>
    </uut>
  </bib>
  
  <!-- Minimal POC Test Configuration -->
  <bib id="bib_poc_minimal" description="Minimal POC Test Configuration">
    <metadata>
      <board_type>poc</board_type>
      <purpose>Sprint 5 Week 2 POC testing</purpose>
      <created_date>2025-07-28</created_date>
    </metadata>
    
    <uut id="uut_poc" description="POC Test UUT">
      <port number="1">
        <protocol>rs232</protocol>
        <speed>115200</speed>
        <data_pattern>n81</data_pattern>
        
        <start>
          <command>HELLO\r\n</command>
          <expected_response>WORLD</expected_response>
          <timeout_ms>2000</timeout_ms>
        </start>
        
        <test>
          <command>PING\r\n</command>
          <expected_response>PONG</expected_response>
          <timeout_ms>1000</timeout_ms>
        </test>
        
        <stop>
          <command>BYE\r\n</command>
          <expected_response>GOODBYE</expected_response>
          <timeout_ms>1000</timeout_ms>
        </stop>
      </port>
    </uut>
  </bib>
</root>