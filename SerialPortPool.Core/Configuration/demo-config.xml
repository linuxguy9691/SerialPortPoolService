<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <bibs>
        <bib id="bib_demo" name="Demo BIB Configuration">
            <description>Configuration de d√©monstration pour Sprint 6</description>
            <uuts>
                <uut id="uut_python_simulator" name="Python Dummy UUT">
                    <description>Simulateur Python pour tests RS232</description>
                    <ports>
                        <port number="1" protocol="rs232" type="primary">
                            <connection>
                                <portName>COM8</portName>
                                <baudRate>9600</baudRate>
                                <dataBits>8</dataBits>
                                <parity>None</parity>
                                <stopBits>One</stopBits>
                                <readTimeout>5000</readTimeout>
                                <writeTimeout>5000</writeTimeout>
                            </connection>
                            <commands>
                                <startCommands>
                                    <command>
                                        <text>POWER_ON\r\n</text>
                                        <expectedResponse>^POWER:ON$</expectedResponse>
                                        <timeout>3000</timeout>
                                        <description>Power on the UUT</description>
                                    </command>
                                    <command>
                                        <text>INIT\r\n</text>
                                        <expectedResponse>^INIT:OK$</expectedResponse>
                                        <timeout>2000</timeout>
                                        <description>Initialize UUT</description>
                                    </command>
                                </startCommands>
                                <testCommands>
                                    <command>
                                        <text>TEST_VOLTAGE\r\n</text>
                                        <expectedResponse>^VOLTAGE:OK$</expectedResponse>
                                        <timeout>5000</timeout>
                                        <description>Test voltage levels</description>
                                    </command>
                                    <command>
                                        <text>TEST_CURRENT\r\n</text>
                                        <expectedResponse>^CURRENT:OK$</expectedResponse>
                                        <timeout>5000</timeout>
                                        <description>Test current consumption</description>
                                    </command>
                                    <command>
                                        <text>TEST_MEMORY\r\n</text>
                                        <expectedResponse>^MEMORY:OK$</expectedResponse>
                                        <timeout>3000</timeout>
                                        <description>Test memory integrity</description>
                                    </command>
                                </testCommands>
                                <stopCommands>
                                    <command>
                                        <text>SHUTDOWN\r\n</text>
                                        <expectedResponse>^SHUTDOWN:OK$</expectedResponse>
                                        <timeout>2000</timeout>
                                        <description>Shutdown UUT</description>
                                    </command>
                                    <command>
                                        <text>POWER_OFF\r\n</text>
                                        <expectedResponse>^POWER:OFF$</expectedResponse>
                                        <timeout>3000</timeout>
                                        <description>Power off the UUT</description>
                                    </command>
                                </stopCommands>
                            </commands>
                        </port>
                    </ports>
                </uut>
            </uuts>
        </bib>
    </bibs>
</configuration>