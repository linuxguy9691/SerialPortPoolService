  <!-- BIB_HARDWARE: Real Hardware Validation Scenario  -->
  <!-- ================================================== -->
  <bib id="bib_hardware">
    <description>Real hardware testing scenario for FT4232H devices</description>
    
    <uut id="uut_ft4232h">
