        </test>
        
        <stop>
          <description>Port 2 shutdown</description>
          <command>EXIT_PORT2\r\n</command>
          <expected_response>PORT2_BYE</expected_response>
          <timeout_ms>2000</timeout_ms>
          <retry_count>1</retry_count>
        </stop>
      </port>
    </uut>
  </bib>
  
