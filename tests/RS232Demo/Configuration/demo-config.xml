<?xml version="1.0" encoding="UTF-8"?>
<!--
  SerialPortPool Sprint 5 Demo Configuration
  BIB → UUT → PORT → PROTOCOL hierarchy for comprehensive testing
  
  This configuration supports multiple demo scenarios:
  1. Python Dummy UUT simulation (safe testing)
  2. Real hardware validation (FT4232H)
  3. Custom protocol testing
  4. Performance benchmarking
-->
<root>
  
  <!-- =============================================== -->
  <!-- BIB_DEMO: Python Dummy UUT Simulator Scenario -->
  <!-- =============================================== -->
  <bib id="bib_demo">
    <description>Demo scenario using Python dummy UUT for safe testing</description>
    
    <uut id="uut_python_simulator">
      <description>Python dummy UUT simulator - predictable responses</description>
      
      <!-- Primary demo port with full 3-phase workflow -->
      <port number="1">
        <protocol>rs232</protocol>
        <speed>115200</speed>
        <data_pattern>n81</data_pattern>
        <description>Main demo port - Python simulator on COM8</description>
        
        <!-- PowerOn Phase: Initialize the UUT -->
        <start>
          <description>Initialize RS232 communication with dummy UUT</description>
          <command>INIT_RS232\r\n</command>
          <expected_response>READY</expected_response>
          <timeout_ms>3000</timeout_ms>
          <retry_count>2</retry_count>
        </start>
        
        <!-- Test Phase: Execute test commands -->
        <test>
          <description>Run primary test sequence</description>
          <command>RUN_TEST_1\r\n</command>
          <expected_response>PASS</expected_response>
          <timeout_ms>5000</timeout_ms>
          <retry_count>1</retry_count>
        </test>
        
        <!-- PowerOff Phase: Graceful shutdown -->
        <stop>
          <description>Gracefully shutdown UUT communication</description>
          <command>STOP_RS232\r\n</command>
          <expected_response>BYE</expected_response>
          <timeout_ms>2000</timeout_ms>
          <retry_count>1</retry_count>
        </stop>
      </port>
      
      <!-- Alternative demo port for multi-port testing -->
      <port number="2">
        <protocol>rs232</protocol>
        <speed>9600</speed>
        <data_pattern>n81</data_pattern>
        <description>Secondary demo port - different baud rate</description>
        
        <start>
          <description>Alternative initialization sequence</description>
          <command>ATZ\r\n</command>
          <expected_response>OK</expected_response>
          <timeout_ms>3000</timeout_ms>
          <retry_count>3</retry_count>
        </start>
        
        <test>
          <description>Status check test</description>
          <command>AT+STATUS\r\n</command>
          <expected_response>STATUS_OK</expected_response>
          <timeout_ms>2000</timeout_ms>
          <retry_count>2</retry_count>
        </test>
        
        <stop>
          <description>Standard AT quit sequence</description>
          <command>AT+QUIT\r\n</command>
          <expected_response>GOODBYE</expected_response>
          <timeout_ms>2000</timeout_ms>
          <retry_count>1</retry_count>
        </stop>
      </port>
    </uut>
    
    <!-- Additional UUT for complex scenarios -->
    <uut id="uut_advanced_demo">
      <description>Advanced demo with extended command sequences</description>
      
      <port number="1">
        <protocol>rs232</protocol>
        <speed>115200</speed>
        <data_pattern>n81</data_pattern>
        <description>Advanced testing port with multiple commands per phase</description>
        
        <!-- Multi-command PowerOn sequence -->
        <start>
          <description>Extended initialization with multiple steps</description>
          <!-- Note: Multiple commands in future enhancement -->
          <command>INIT_RS232\r\n</command>
          <expected_response>READY</expected_response>
          <timeout_ms>3000</timeout_ms>
          <retry_count>2</retry_count>
        </start>
        
        <test>
          <description>Comprehensive test sequence</description>
          <command>RUN_TEST_1\r\n</command>
          <expected_response>PASS</expected_response>
          <timeout_ms>10000</timeout_ms>
          <retry_count>1</retry_count>
        </test>
        
        <stop>
          <description>Extended shutdown sequence</description>
          <command>STOP_RS232\r\n</command>
          <expected_response>BYE</expected_response>
          <timeout_ms>3000</timeout_ms>
          <retry_count>1</retry_count>
        </stop>
      </port>
    </uut>
  </bib>
  
