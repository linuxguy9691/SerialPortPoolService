{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "SerialPortPool": "Debug",
      "SerialPortPool.Demo": "Warning",
      "System.IO.Ports": "Warning"
    },
    "Console": {
      "IncludeScopes": false,
      "TimestampFormat": "HH:mm:ss.fff ",
      "LogLevel": {
        "Default": "Error",
        "SerialPortPool": "Error"
      }
    }
  },
  
  "Demo": {
    "Application": {
      "Name": "SerialPortPool RS232 Demo",
      "Version": "1.0.0",
      "Description": "Sprint 5 Demo - Multi-Protocol Communication Showcase"
    },
    
    "DefaultSettings": {
      "PreferredPort": "COM8",
      "DefaultBaudRate": 115200,
      "DefaultTimeout": 5000,
      "DefaultRetryCount": 2,
      "DefaultProtocol": "rs232"
    },
    
    "PythonDummyUUT": {
      "Enabled": true,
      "ExpectedPort": "COM8",
      "ExpectedBaudRate": 115200,
      "ConnectionTimeout": 3000,
      "CommandTimeout": 5000,
      "MaxRetries": 3,
      "ValidateResponses": true
    },
    
    "RealHardware": {
      "Enabled": true,
      "AutoDetectFTDI": true,
      "PreferMultiPortDevices": true,
      "ConnectionTimeout": 5000,
      "CommandTimeout": 10000,
      "MaxRetries": 2,
      "RequireDeviceValidation": true
    },
    
    "PerformanceTesting": {
      "Enabled": true,
      "DefaultIterations": 10,
      "MaxIterations": 100,
      "ConcurrentConnections": 1,
      "MaxConcurrentConnections": 5,
      "CollectDetailedMetrics": true,
      "EnableStressTest": false
    },
    
    "UserInterface": {
      "ClearScreenBetweenScenarios": true,
      "ShowTimestamps": true,
      "EnableColors": true,
      "EnableProgressBars": true,
      "AutoScrollResults": true,
      "ConfirmBeforeExit": true
    },
    
    "ErrorHandling": {
      "ContinueOnNonCriticalErrors": true,
      "LogDetailedErrors": true,
      "ShowSuggestions": true,
      "AutoRetryOnTimeout": true,
      "MaxAutoRetries": 2
    }
  },
  
  "SerialPortPool": {
    "Core": {
      "ValidationMode": "Development",
      "LogDirectory": "C:\\Logs\\SerialPortPool\\Demo",
      "EnableDeviceGrouping": true,
      "EnableSystemInfoCaching": true,
      "CacheExpirationMinutes": 10
    },
    
    "Discovery": {
      "EnableEnhancedDiscovery": true,
      "ScanInterval": 30,
      "IncludeFTDIAnalysis": true,
      "IncludeWMIEnrichment": true,
      "ValidateDevicesOnDiscovery": true
    },
    
    "FTDI": {
      "EnableFTDIDeviceReader": true,
      "RequireValidFTDIDevices": false,
      "LogFTDIDetails": true,
      "CacheEEPROMData": true,
      "PreferFT4232HDevices": true
    },
    
    "Pool": {
      "EnableThreadSafeOperations": true,
      "MaxConcurrentAllocations": 10,
      "AllocationTimeout": 30000,
      "EnableSessionTracking": true,
      "AutoReleaseOnTimeout": true
    },
    
    "Validation": {
      "Mode": "Development",
      "ScoreThreshold": 50,
      "RequireFTDIDevice": false,
      "RequireMultiPortDevice": false,
      "EnableCustomCriteria": true
    }
  },
  
  "Sprint5": {
    "Extensions": {
      "EnablePortReservation": true,
      "EnableProtocolHandlers": true,
      "EnableXmlConfiguration": true,
      "EnableBibWorkflowOrchestrator": true
    },
    
    "Protocols": {
      "RS232": {
        "Enabled": true,
        "DefaultBaudRate": 115200,
        "DefaultDataBits": 8,
        "DefaultParity": "None",
        "DefaultStopBits": 1,
        "DefaultTimeout": 5000,
        "EnableFlowControl": false
      },
      
      "RS485": {
        "Enabled": false,
        "PlannedForSprint6": true,
        "DefaultBaudRate": 9600,
        "DefaultDataBits": 7,
        "DefaultParity": "Even",
        "DefaultStopBits": 1
      },
      
      "USB": {
        "Enabled": false,
        "PlannedForSprint6": true,
        "DefaultVendorId": "0x0403",
        "DefaultProductId": "0x6001"
      },
      
      "CAN": {
        "Enabled": false,
        "PlannedForSprint6": true,
        "DefaultBitRate": 125000
      },
      
      "I2C": {
        "Enabled": false,
        "PlannedForSprint6": true,
        "DefaultClockSpeed": 100000
      },
      
      "SPI": {
        "Enabled": false,
        "PlannedForSprint6": true,
        "DefaultClockSpeed": 1000000
      }
    },
    
    "Configuration": {
      "DefaultConfigFile": "Configuration/demo-config.xml",
      "EnableXmlValidation": true,
      "EnableConfigCaching": true,
      "ReloadOnChange": false,
      "SupportMultipleBIBs": true
    },
    
    "Workflow": {
      "Enable3PhaseExecution": true,
      "RequireAllPhasesSuccess": false,
      "ContinueOnPhaseFailure": true,
      "LogPhaseDetails": true,
      "EnablePhaseTimeout": true,
      "DefaultPhaseTimeout": 30000
    }
  },
  
  "Development": {
    "EnableDebugMode": true,
    "EnableDetailedLogging": true,
    "EnablePerformanceCounters": true,
    "ShowInternalTimings": false,
    "EnableServiceValidation": true,
    "LogServiceResolution": false
  },
  
  "Testing": {
    "MockMode": false,
    "SimulateDevices": false,
    "EnableTestLogging": true,
    "UseInMemoryConfigurations": false,
    "SkipHardwareValidation": false
  },
  
  "Diagnostics": {
    "EnableApplicationInsights": false,
    "EnableETWLogging": false,
    "EnableCustomMetrics": true,
    "LogMemoryUsage": true,
    "LogThreadCount": true,
    "EnablePerformanceCounters": false
  }
}